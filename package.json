{
  "name": "space-survivors",
  "version": "0.0.1",
  "description": "Electron Excalibur",
  "main": "electron/electron.js",
  "scripts": {
    "start": "yarn electron:dev",
    "build": "yarn app:build",
    "dev": "vite --open",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "rsw": "rsw"
  },
  "keywords": [
    "space-survivors",
    "excalibur",
    "excaliburjs",
    "vite",
    "game",
    "electron"
  ],
  "author": "yongsooim",
  "devDependencies": {
    "@excaliburjs/dev-tools": "^0.25.3",
    "@excaliburjs/plugin-aseprite": "^0.25.3",
    "@excaliburjs/plugin-tiled": "^0.25.3",
    "@types/matter-js": "^0.17.7",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "excalibur": "0.25.3",
    "typescript": "4.6.3",
    "vite": "^2.9.5",
    "vite-plugin-rsw": "^2.0.2",
    "vite-plugin-static-copy": "^0.4.4",
    "vite-plugin-top-level-await": "^0.0.4",
    "vite-plugin-wasm": "^0.0.2",
    "vite-plugin-worker": "^1.0.5",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "box2d-wasm": "^7.0.0",
    "is-mobile": "^3.1.1"
  },
  "build": {
    "appId": "SpaceSurvivors",
    "productName": "SpaceSurvivors",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
